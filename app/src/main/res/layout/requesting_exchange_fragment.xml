<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.requesting.RequestingExchageFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratings"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agence"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_review_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="review agency"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_review_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="review agent"
            android:textColor="@android:color/white" />

    </LinearLayout>

</FrameLayout>