<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_26dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/id_guarantor_image"
        android:layout_width="@dimen/dimen_44dp"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@drawable/ic_person_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_guarantor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Germaine Doue"
            android:textColor="@color/color_black_4B4A4A"
            android:textSize="@dimen/dim_16sp" />

        <TextView
            android:id="@+id/id_guarantor_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="85 pts"
            android:textColor="@color/color_black_4B4A4A"
            android:textSize="@dimen/dimen_20sp" />
    </LinearLayout>

</LinearLayout>