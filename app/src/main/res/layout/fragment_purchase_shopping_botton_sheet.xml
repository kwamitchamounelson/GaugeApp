<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_bottom_sheet_purchase_shopping"
    style="@style/AppBottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:layout_behavior="com.kola.kolawallet.ui.createTransaction.helpersClass.LockedBottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dim_30dp"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_purchase_shopping_store_image"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center_horizontal"
            android:minWidth="@dimen/dimen_150dp"
            android:minHeight="@dimen/dim_40dp"
            android:padding="5dp"
            android:src="@drawable/ic_casino_supermarket_logo" />

        <TextView
            android:id="@+id/id_purchase_shopping_store_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center"
            android:maxWidth="@dimen/dimen_200dp"
            android:text="Casino supermarket, Central town, Yaounde"
            android:textColor="@color/color_store_location"
            android:textSize="@dimen/dimen_16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30dp"
            android:text="@string/amount"
            android:textAllCaps="true"
            android:textSize="@dimen/dim_16sp" />

        <EditText
            android:id="@+id/id_amount_shopping_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:backgroundTint="@color/color_gray_CCCCCC"
            android:gravity="center"
            android:inputType="number"
            android:text="10 000"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_26sp" />


        <Button
            android:id="@+id/id_purchase_shopping_button"
            style="@style/button_default_style"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_40dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:text="@string/purchase" />
    </LinearLayout>
</androidx.cardview.widget.CardView>