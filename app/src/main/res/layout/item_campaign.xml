<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_150dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    app:cardBackgroundColor="@color/color_red_FFF6E6"
    app:cardCornerRadius="@dimen/dim_8dp"
    app:cardElevation="@dimen/dim_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_campaign_item_user_image"
                android:layout_width="@dimen/dim_32dp"
                android:layout_height="@dimen/dim_32dp"
                android:layout_marginEnd="@dimen/dim_7dp"
                android:src="@drawable/ic_person_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Toto Pro"
                    android:textColor="@color/color_black_452248"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="60%"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="10 000 F"
            android:textColor="@color/color_black_2E2E2E"
            android:textSize="@dimen/dimen_20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="10%"
            android:textColor="@color/color_black_2E2E2E"
            android:textSize="@dimen/dimen_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12-04-20"
                android:textColor="@color/color_black_2E2E2E"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="3 m / 2 d"
                android:textColor="@color/color_black_2E2E2E"
                android:textSize="@dimen/dimen_14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>