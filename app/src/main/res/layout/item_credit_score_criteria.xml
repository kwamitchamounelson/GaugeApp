<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:layout_marginVertical="@dimen/dimen_17dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_score_criteria_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Score criteria"
                android:textColor="@color/color_gray_131313"
                android:textSize="@dimen/dim_16sp" />

            <TextView
                android:id="@+id/id_score_criteria_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_7dp"
                android:text="You have made 100% of your payback on time"
                android:textColor="@color/color_gray_707070"
                android:textSize="@dimen/dimen_14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_score_criteria_appreciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/excellent"
            android:textColor="@color/color_green_05BA49"
            android:textSize="@dimen/dim_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E6E6E6" />

</LinearLayout>