<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingHorizontal="@dimen/dim_25dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_35dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/fill_in_all_the_fields"
                android:textColor="@color/color_gray_919191"
                android:textSize="@dimen/dim_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_38dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/id_profile_user_image"
                        android:layout_width="@dimen/dimen_150dp"
                        android:layout_height="@dimen/dimen_150dp"
                        android:src="@drawable/ic_person_black_24dp" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen_44dp"
                        android:layout_height="@dimen/dimen_44dp"
                        android:layout_marginStart="-45dp"
                        android:background="@drawable/circular_shape_app_theme"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/colorAccent" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_7dp"
                    android:text="@string/please_take_a_selfie"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_20dp"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dim_4dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/color_gray_CCCCCC"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_gray_A6A6A6"
                        android:textSize="@dimen/dim_16sp" />

                    <ImageView
                        android:layout_width="@dimen/dimen_12dp"
                        android:layout_height="@dimen/dimen_12dp"
                        android:layout_marginBottom="@dimen/dimen_13dp"
                        android:src="@drawable/ic_edit_black"
                        app:tint="@color/color_gray_919191" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_20dp"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dim_4dp"
                        android:src="@drawable/ic_artboard" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/color_gray_CCCCCC"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/national_id_number"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_gray_A6A6A6"
                        android:textSize="@dimen/dim_16sp" />

                    <ImageView
                        android:layout_width="@dimen/dimen_12dp"
                        android:layout_height="@dimen/dimen_12dp"
                        android:layout_marginBottom="@dimen/dimen_13dp"
                        android:src="@drawable/ic_edit_black"
                        app:tint="@color/color_gray_919191" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:text="@string/id_photo"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:text="@string/a_photo_of_your_id_card_with_all_information_visible"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_14sp" />

            <LinearLayout
                android:id="@+id/id_your_profile_id_card_front_parent_block"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_164dp"
                android:layout_marginTop="@dimen/dim_45dp"
                android:background="@drawable/background_id_card_block"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_15dp">

                <LinearLayout
                    android:id="@+id/id_your_profile_id_card_front_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dimen_1dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_profile_id_cart_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image_black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/id_text_front_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/front_of_id_card"
                        android:textColor="@color/color_red_FF4141"
                        android:textSize="@dimen/dimen_20sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen_44dp"
                        android:layout_height="@dimen/dimen_44dp"
                        android:layout_marginStart="-45dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:background="@drawable/circular_shape_app_theme"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/colorAccent" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_your_profile_id_card_back_parent_block"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_164dp"
                android:layout_marginTop="@dimen/dim_30dp"
                android:background="@drawable/background_id_card_block"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_15dp">

                <LinearLayout
                    android:id="@+id/id_your_profile_id_card_back_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dimen_1dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_profile_id_cart_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image_black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/id_text_back_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/back_of_id_card"
                        android:textColor="@color/color_red_FF4141"
                        android:textSize="@dimen/dimen_20sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen_44dp"
                        android:layout_height="@dimen/dimen_44dp"
                        android:layout_marginStart="-45dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:background="@drawable/circular_shape_app_theme"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/colorAccent" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/id_verify_my_account_button"
                style="@style/button_default_style"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:text="@string/verify_my_account" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>