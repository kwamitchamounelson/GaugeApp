<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_3dp"
    android:layout_marginTop="@dimen/dimen_3dp"
    android:layout_marginBottom="@dimen/dim_20dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/dim_8dp"
    app:cardElevation="@dimen/dim_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_15dp">

        <ImageView
            android:id="@+id/id_shopping_store_image"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:maxHeight="@dimen/dimen_50dp"
            android:src="@drawable/ic_casino_supermarket_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_shopping_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:text="Casino"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:src="@drawable/ic_location_gray" />

                <TextView
                    android:id="@+id/id_shopping_store_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Marche Central"
                    android:textColor="@color/color_store_location"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>