<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_26dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/id_add_guarantor_image"
            android:layout_width="@dimen/dim_38dp"
            android:layout_height="@dimen/dim_38dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:src="@drawable/ic_person_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_add_guarantor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arturo toto"
                android:textColor="@color/color_black_3D3C3D"
                android:textSize="@dimen/dim_16sp" />

            <TextView
                android:id="@+id/id_add_guarantor_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_4dp"
                android:text="85%"
                android:textColor="@color/color_black_3D3C3D"
                android:textSize="@dimen/dim_16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_state_waiting_guarantor"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_8dp"
        android:text="@string/waiting"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_14sp" />

</LinearLayout>